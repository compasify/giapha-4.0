{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Gia Pha Online",
  "version": "0.1.0",
  "identifier": "vn.giaphaonline.app",
  "build": {
    "devUrl": "http://localhost:3000",
    "frontendDist": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build && npm run prepare:sidecar"
  },
  "app": {
    "windows": [
      {
        "title": "Gia Pháº£ Online",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost http://localhost:* http://127.0.0.1:*; img-src 'self' asset: http://asset.localhost data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/node"
    ],
    "resources": {
      "standalone/": "standalone/"
    }
  }
}
