# Copy file này thành .env.local và điền giá trị phù hợp

# Chế độ data: "local" (SQLite) hoặc "api" (Rails backend)
DATA_MODE=api

# Chỉ cần khi DATA_MODE=local
DATABASE_URL=file:./data/family.db

# Tắt auth check khi chạy desktop/local (single-user mode)
LOCAL_AUTH_DISABLED=false
NEXT_PUBLIC_LOCAL_AUTH_DISABLED=false

# URL của Rails API (chỉ cần khi DATA_MODE=api)
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME='Gia Phả 365'
NEXT_PUBLIC_APP_URL=http://localhost:3000
